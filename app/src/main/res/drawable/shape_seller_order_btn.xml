<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
	    <shape android:shape="rectangle" >
		    <solid android:color="@color/theme_red_deep" />
		    <padding android:left="6dp"
		        android:top="3dp"
		        android:right="6dp"
		        android:bottom="3dp"
		        />
		    <corners  
				android:radius="3dp" />
		</shape>    
    </item>
    <item android:state_pressed="false">
	    <shape android:shape="rectangle" >
		    <solid android:color="@color/theme_red_bg" />
		    <padding android:left="6dp"
		        android:top="3dp"
		        android:right="6dp"
		        android:bottom="3dp"
		        />
		    <corners  
				android:radius="3dp" />
		</shape>
	</item>
</selector>