<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/theme_red_bg" android:state_pressed="true"><shape>
            <corners android:radius="3dp"></corners>

            <stroke android:width="1dp" android:color="@color/theme_red_bg" />

            <solid android:color="@color/theme_red_bg" />
        </shape></item>
    <item android:drawable="@color/theme_red_bg" android:state_selected="true"><shape>
            <corners android:radius="3dp"></corners>

            <stroke android:width="1dp" android:color="@color/theme_red_bg" />

            <solid android:color="@color/theme_red_bg" />
        </shape></item>
    <item><shape>
            <corners android:radius="3dp"></corners>

            <stroke android:width="1dp" android:color="@color/gray2" />

            <solid android:color="@color/white" />
        </shape></item>

</selector>