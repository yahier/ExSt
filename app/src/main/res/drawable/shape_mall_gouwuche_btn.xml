<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@color/white" android:drawable="@color/gray_button" android:state_pressed="true">
    	<shape android:shape="rectangle" >
		    <solid android:color="@color/gray2" />
		    <padding android:left="6dp"
		        android:top="3dp"
		        android:right="6dp"
		        android:bottom="3dp"
		        />
		    <corners  
				android:radius="3dp" />
		</shape>
	</item>
    <item android:color="@color/gray_text" android:state_pressed="false">
	    <shape android:shape="rectangle" >
		    <solid android:color="@color/gold" />
		    <padding android:left="6dp"
		        android:top="3dp"
		        android:right="6dp"
		        android:bottom="3dp"
		        />
		    <corners  
				android:radius="3dp" />
		</shape>
	</item>
</selector>