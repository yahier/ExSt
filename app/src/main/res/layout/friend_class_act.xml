<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_master"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="16dp"
        android:visibility="gone" >

        <com.stbl.stbl.widget.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/v_middle"
            android:layout_width="10dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/v_middle"
            android:layout_toRightOf="@id/iv_head"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_middle"
            android:layout_toRightOf="@id/iv_head"
            android:background="@drawable/shape_red_corner32"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_relation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_middle"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_name"
            android:drawableLeft="@drawable/icon_relation_master"
            android:text="师傅"
            android:textColor="#f7cd2c"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_middle"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tv_age"
            android:drawableLeft="@drawable/icon_my_position"
            android:textColor="#4c4c4c"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/edge_gap" />

    <RelativeLayout
        android:id="@+id/layout_student"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="我的徒弟"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/test_right" />
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/edge_gap" />

    <RelativeLayout
        android:id="@+id/layout_friend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="我的徒弟"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/test_right" />
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/edge_gap" />

</LinearLayout>