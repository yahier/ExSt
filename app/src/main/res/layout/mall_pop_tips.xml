<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_seller_order_return"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:drawablePadding="4dp"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_list" />

        <LinearLayout
            android:id="@+id/linTitle"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">

            <View
                android:id="@+id/line1"
                style="@style/line_horizontal"
                android:layout_marginBottom="10dp" />

            <!-- <include layout="@layout/seller_wish_item" /> -->

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="center"
                android:text="是否确定放弃此次购买？"
                android:textColor="@color/gray_a7"
                android:textSize="@dimen/font_size_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputLin"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                style="@style/line_horizontal"
                android:layout_marginBottom="10dp" />

            <!-- <include layout="@layout/seller_wish_item" /> -->

            <EditText
                android:id="@+id/inputContent"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@null"
                android:hint="请输入取消原因"
                android:maxLines="6"
                android:padding="6dp"
                android:textColor="@color/gray1"
                android:textSize="@dimen/font_size_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:visibility="visible">

            <Button
                android:id="@+id/button1"
                android:layout_height="34dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/common_btn_gray_line"
                android:textColor="@color/gray_a7"
                android:text="@string/mall_cancel" />

            <View
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/px_1"/>

            <Button
                android:id="@+id/button2"
                style="@style/common_bnt_short_red"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/mall_confirm2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <Button
                android:id="@+id/button3"
                style="@style/common_bnt_short_red"
                android:layout_width="160dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/mall_confirm2" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>