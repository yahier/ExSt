<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical">

    <View
        style="@style/divider_1px"
        android:layout_marginTop="@dimen/padding_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/me_phone_number"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />
    </LinearLayout>

    <View style="@style/divider_1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_image_verify_code"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <EditText
            android:id="@+id/et_imgverify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/me_please_input_verify_code"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:id="@+id/iv_imgverify"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/def" />
    </LinearLayout>

    <View style="@style/divider_1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_message_verify_code"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <EditText
            android:id="@+id/et_verify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/me_please_input_verify_code"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:singleLine="true"
            android:textColor="@color/font_black"
            android:textColorHint="@color/font_gray"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/me_send_verify_code"
            android:textColor="@color/font_red"
            android:textSize="@dimen/font_L" />

    </LinearLayout>

    <View style="@style/divider_1px" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:background="@drawable/btn_selector_red"
        android:text="@string/me_verify_phone_number"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_L" />

</LinearLayout>