<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_weight="158"
            android:background="@drawable/shape_rank_top_three_bg"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4">

            <com.stbl.stbl.widget.RoundImageView
                android:id="@+id/iv_user_img_two"
                android:layout_width="@dimen/list_head_img_width_height"
                android:layout_height="@dimen/list_head_img_width_height"
                android:layout_marginTop="@dimen/dp_30"
                tools:src="@drawable/def_head"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_sex_two"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignBottom="@+id/iv_user_img_two"
                android:layout_alignRight="@+id/iv_user_img_two"
                android:src="@drawable/sex_man"
                />

            <TextView
                android:id="@+id/tv_name_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_user_img_two"
                android:layout_marginTop="@dimen/dp_15"
                android:text="师徒部落"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_rank_tips_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_two"
                android:layout_marginTop="@dimen/dp_5"
                android:text="活跃指数"
                android:gravity="center"
                android:textColor="@color/gray_a4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_rank_tips_num_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rank_tips_two"
                android:layout_marginTop="@dimen/dp_5"
                android:text="234"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/theme_red" />

            <ImageView
                android:id="@+id/iv_rank_img_two"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/rank_two"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_weight="232"
            android:background="@drawable/shape_rank_top_three_bg"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4">

            <com.stbl.stbl.widget.RoundImageView
                android:id="@+id/iv_user_img_one"
                android:layout_width="@dimen/list_head_img_width_height"
                android:layout_height="@dimen/list_head_img_width_height"
                android:layout_marginTop="@dimen/dp_30"
                tools:src="@drawable/def_head"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_sex_one"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignBottom="@+id/iv_user_img_one"
                android:layout_alignRight="@+id/iv_user_img_one"
                android:src="@drawable/sex_man"
                />

            <TextView
                android:id="@+id/tv_name_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_user_img_one"
                android:layout_marginTop="@dimen/dp_20"
                android:text="师徒部落"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_rank_tips_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_one"
                android:layout_marginTop="@dimen/dp_5"
                android:text="活跃指数"
                android:gravity="center"
                android:textColor="@color/gray_a4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_rank_tips_num_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rank_tips_one"
                android:layout_marginTop="@dimen/dp_5"
                android:text="234"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/theme_red" />

            <ImageView
                android:id="@+id/iv_rank_img_one"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/rank_one"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_weight="158"
            android:background="@drawable/shape_rank_top_three_bg"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4">

            <com.stbl.stbl.widget.RoundImageView
                android:id="@+id/iv_user_img_three"
                android:layout_width="@dimen/list_head_img_width_height"
                android:layout_height="@dimen/list_head_img_width_height"
                android:layout_marginTop="@dimen/dp_30"
                tools:src="@drawable/def_head"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv_sex_three"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_alignBottom="@+id/iv_user_img_three"
                android:layout_alignRight="@+id/iv_user_img_three"
                android:src="@drawable/sex_man"
               />

            <TextView
                android:id="@+id/tv_name_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_user_img_three"
                android:layout_marginTop="@dimen/dp_15"
                android:text="师徒部落"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_rank_tips_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_three"
                android:layout_marginTop="@dimen/dp_5"
                android:text="活跃指数"
                android:gravity="center"
                android:textColor="@color/gray_a4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_rank_tips_num_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rank_tips_three"
                android:layout_marginTop="@dimen/dp_5"
                android:text="234"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/theme_red" />

            <ImageView
                android:id="@+id/iv_rank_img_three"
                android:layout_width="44dp"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/dp_5"
                android:src="@drawable/rank_three"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/gray_line" />
</LinearLayout>