<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/im_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <com.stbl.stbl.widget.RoundImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/list_statuses_remark_head_img_width_height"
        android:layout_height="@dimen/list_statuses_remark_head_img_width_height"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            style="@style/im_list_name1"
            android:text="小baby" />

        <TextView
            android:id="@+id/time"
            style="@style/im_list_name2"
            android:text="小baby" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvNum"
            style="@style/im_list_name1"
            android:text="10个" />

        <TextView
            android:id="@+id/tvBest"
            style="@style/im_list_name2"
            android:text="手气最佳"
            android:textColor="@color/theme_red_bg"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>