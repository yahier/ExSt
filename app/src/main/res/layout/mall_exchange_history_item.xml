<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goods_photo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="centerCrop"
        android:src="@drawable/dongtai_default" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_goods_photo"
        android:layout_marginRight="@dimen/dp_15"
        android:text="2016-04-22"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/gray_a8"
        android:textSize="@dimen/sp_12" />

    <!--<TextView
        android:id="@+id/tv_shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_goods_photo"
        android:layout_toRightOf="@+id/iv_goods_photo"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toLeftOf="@+id/tv_time"
        android:text="init"
        android:maxLines="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:textColor="@color/gray_a6"
        android:textSize="@dimen/sp_12" />-->

    <TextView
        android:id="@+id/tv_goodsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_goods_photo"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toLeftOf="@+id/tv_time"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_goods_photo"
        android:includeFontPadding="false"
        android:text="----------"
        android:textColor="@color/gray_333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_price_root"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="---"
        android:textColor="@color/theme_red"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/ll_price_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_goodsname"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_goodsname"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:text="223"
            android:textColor="@color/gray_a7"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_goods_price"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@drawable/icon_wallet_piao" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@+id/ll_price_root"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_line" />

</RelativeLayout>