<!-- 只用作整个文件复制用 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/statuses_link_lin"
    android:layout_margin="100dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_dongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/im_dynamic_label"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_L" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_1px"
        android:layout_below="@id/tv_dongtai"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp" />

    <ImageView
        android:id="@+id/link3_img"
        android:layout_width="@dimen/list_head_img_width_height"
        android:layout_height="@dimen/list_head_img_width_height"
        android:layout_below="@id/v_divider"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/link3_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/link3_img"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/link3_img"
        android:maxLines="3"
        android:textColor="@color/gray1"
        android:textSize="14sp" />

    <!--昵称  -->
    <TextView
        android:id="@+id/tv_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/link3_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/link3_img"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_M"
        tools:text="发布的动态" />


</RelativeLayout>