<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_seller_order_return"
    android:gravity="center"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_4"
        android:text="是否确定放弃此次购买？"
        android:textColor="@color/gray_a7"
        android:textSize="@dimen/font_size_content" />

    <LinearLayout
        android:id="@+id/btn_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_13"
        android:visibility="visible">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:ems="4"
            android:background="@drawable/common_btn_gray_line"
            android:text="@string/mall_cancel"
            android:textSize="@dimen/font_size_content"
            android:textColor="@color/gray_a7" />

        <View
            android:id="@+id/v_middle"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/px_1" />

        <Button
            android:id="@+id/button2"
            style="@style/common_bnt_short_red"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:ems="4"
            android:text="@string/mall_confirm2" />
    </LinearLayout>

</LinearLayout>