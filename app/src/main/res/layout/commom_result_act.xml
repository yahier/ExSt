<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_result_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:src="@drawable/icon_feedback_success" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="----"
        android:textColor="#2d2d2d"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="----"
        android:textColor="@color/gray_a5"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvOperate"
        android:layout_width="114dp"
        android:layout_height="39dp"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/common_btn_gray_line_ddd"
        android:gravity="center"
        android:text="@string/queding"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

</LinearLayout>