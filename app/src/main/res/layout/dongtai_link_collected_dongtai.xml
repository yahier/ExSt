<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/statuses_link_lin"
    android:layout_margin="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/link3_img"
        android:layout_width="@dimen/list_head_img_width_height"
        android:layout_height="@dimen/list_head_img_width_height"
        android:scaleType="centerCrop"
        android:src="@drawable/dongtai_default" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.rockerhieu.emojicon.EmojiconTextView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/link3_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            tools:text="eeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
            android:textColor="@color/gray1"
            android:textSize="15sp"
            app:emojiconSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/link3_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="sdfg"
                android:textColor="@color/theme_brown"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/statuses_by_someone"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>