<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left"
    android:paddingTop="@dimen/padding_top">

    <LinearLayout
        android:id="@+id/layout_exchange_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@drawable/selector_white2gray_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_exchange_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="兑换金豆"
            android:textColor="#9c9c9c"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ssdk_recomm_plats_more" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pay_category"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:layout_marginTop="@dimen/padding_top"
        android:background="@drawable/selector_white2gray_stroke"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_pay_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="余额支付"
            android:textColor="#9c9c9c"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ssdk_recomm_plats_more" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_exchange_amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:layout_marginTop="@dimen/padding_top"
        android:background="@drawable/selector_white2gray_stroke"
        android:paddingLeft="12dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_gold_bean" />

        <TextView
            android:id="@+id/tv_bean_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_bean"
            android:singleLine="true"
            android:text="请选择兑换数量"
            android:textColor="#9c9c9c"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ssdk_recomm_plats_more" />

        <TextView
            android:id="@+id/tv_bean_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@id/iv_arrow"
            android:singleLine="true"
            android:textColor="#9c9c9c"
            android:textSize="@dimen/font_L" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_exchange_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:textColor="#9c9c9c"
        android:textSize="14sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_pay_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:textColor="#121212"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_exchange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_red_btn"
        android:text="兑换"
        android:textColor="#fff"
        android:textSize="@dimen/font_L" />


</LinearLayout>
