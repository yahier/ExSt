<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="呵呵哈哈哈"
        android:textColor="@color/f_black"
        android:textSize="14sp" />


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_nick"
        android:scaleType="centerCrop"
        android:src="@drawable/default_round_corner_head" />

    <ImageView
        android:id="@+id/iv_head_foregroud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignTop="@+id/iv_head"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_alignLeft="@+id/iv_head"
        android:layout_alignRight="@+id/iv_head"
        android:background="@drawable/bg_hot_kuang"
        />

</RelativeLayout>