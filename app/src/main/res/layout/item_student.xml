    <!-- android:drawableLeft="@drawable/icon_add"-->
    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/red_line_bg"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/me_add_friend"
        android:textColor="@color/theme_red_bg"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_friend"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/me_is_friend"
        android:textColor="@color/gray2"
        android:textSize="14sp"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/layout_extra_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/iv_head"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_gender"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_8"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="@color/gray_a5"
            android:textSize="11sp"/>


        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_a5"
            android:textSize="11sp"/>
        <!--android:drawableLeft="@drawable/icon_my_position"-->

        <View
            android:layout_width="10dp"
            android:layout_height="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_extra_info"
        android:layout_toRightOf="@id/iv_head"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_extra_info"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_name"
        android:textColor="#f7cd2c"
        android:textSize="13sp"/>


    <ImageView
        android:id="@+id/imgNew"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_apprentice_corner_new"/>


</RelativeLayout>

