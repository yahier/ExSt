<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/statuses_link_lin"
    android:layout_margin="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/link8Img"
        android:layout_width="@dimen/list_head_img_width_height"
        android:layout_height="@dimen/list_head_img_width_height"
        android:scaleType="centerCrop"
        android:src="@drawable/dongtai_default" />


    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/link8Content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        tools:text="我是一个精彩链接"
        android:textColor="@color/gray1"
        android:textSize="13sp" />


</LinearLayout>