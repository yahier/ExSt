<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View
        android:id="@+id/v_center"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/v_center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/plugin_camera_no_pictures" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/mall_goods_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称"
			android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_content" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/mall_goods_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="¥999.99"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/font_size_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/v_center"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/plugin_camera_no_pictures" />

        <TextView
            android:id="@+id/tv_name2"
            style="@style/mall_goods_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_content" />

        <TextView
            android:id="@+id/tv_price2"
            style="@style/mall_goods_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="¥999.99"
            android:textColor="@color/theme_red"
            android:textSize="@dimen/font_size_title" />
    </LinearLayout>

</RelativeLayout>
