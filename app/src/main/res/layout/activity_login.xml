<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/register_lin">
    <View style="@style/Divider"/>

    <LinearLayout
        android:id="@+id/linZone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:background="@drawable/list_selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:id="@+id/tvZone"
            style="@style/register_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/country_region" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test_right" />

    </LinearLayout>

    <View style="@style/register_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:background="@drawable/list_selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <EditText
            android:id="@+id/inputPhone"
            style="@style/register_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/phone_number"
            android:inputType="number" />

        <ImageView
            android:id="@+id/imgDeletePhone"
            style="@style/register_input_delete" />


    </LinearLayout>

    <View style="@style/register_divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:background="@drawable/list_selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <EditText
            android:id="@+id/et_password"
            style="@style/register_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/imgDeletePwd"
            style="@style/register_input_delete" />

    </LinearLayout>

    <View style="@style/register_divider_line" />


    <TextView
        android:id="@+id/btn_login"
        style="@style/register_long_btn"
        android:text="@string/login_in_btn" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:padding="6dp"
        android:text="@string/forget_password"
        android:textColor="#e7bc09"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/linLogin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                style="@style/register_divider_line"
                android:layout_width="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/other_login_type"
                android:textColor="#969696"
                android:textSize="14sp" />

            <View
                style="@style/register_divider_line"
                android:layout_width="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_weixin_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_weixin_login" />
    </LinearLayout>


</LinearLayout>
