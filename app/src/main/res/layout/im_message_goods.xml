<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/tv_dongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/im_goods_label"
        android:textColor="@color/font_black"
        android:textSize="@dimen/sp_15" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_1px"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tv_dongtai" />

    <ImageView
        android:id="@+id/link4imgLink"
        android:layout_below="@id/v_divider"
        android:layout_width="@dimen/list_head_img_width_height"
        android:layout_height="@dimen/list_head_img_width_height"
        android:scaleType="centerCrop"
        android:src="@drawable/test" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_head_img_width_height"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/link4imgLink"
        android:layout_alignTop="@id/link4imgLink"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/link4tvGoodsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="2"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_remark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/link4tvGoodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_red"
                android:textSize="@dimen/font_size_icon" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/link4tvGoodsSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"

                android:textColor="@color/gray1"
                android:textSize="@dimen/font_size_icon" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>