<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/theme_bg"
              android:orientation="vertical">

    <!-- 第一块 -->

    <View style="@style/Divider"/>
    <LinearLayout
        android:id="@+id/linUserInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="17.5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="17.5dp"
        >

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <com.stbl.stbl.widget.RoundImageView
                android:id="@+id/imgUser"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:scaleType="centerCrop"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvName"
                    style="@style/common_item_rela_right"
                    android:singleLine="true"
                    android:textColor="@color/gray1"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/imgAuthorized"
                    style="@style/list_authorized"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgGender"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    />

                <TextView
                    android:id="@+id/tvAge"
                    style="@style/common_item_rela_right"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black7"
                    android:textSize="14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/black7"
                    android:textSize="14sp"
                    />
            </LinearLayout>


        </LinearLayout>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test_right"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_setting_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/theme_bg"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/mine_wallet"
                android:layout_centerVertical="true"
                android:text="@string/im_set_alias"/>

            <TextView
                android:id="@+id/tvAlias"
                style="@style/common_item_rela_right"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/test_right"
                android:textColor="#777"/>


        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="@dimen/dp_12"
            android:background="#e6e6e6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/mine_wallet"
                android:layout_centerVertical="true"
                android:text="@string/im_conversation_top"/>

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_shut"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6e6e6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/mine_wallet"
                android:layout_centerVertical="true"
                android:text="@string/message_not_disturb"/>

            <ImageView
                android:id="@+id/imgNotify"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_shut"/>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6e6e6"/>
    </LinearLayout>

</LinearLayout>