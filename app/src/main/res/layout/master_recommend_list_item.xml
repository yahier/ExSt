<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/im_list_item"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.stbl.stbl.widget.RoundImageView
            android:id="@+id/user_img"
            style="@style/im_list_img"
            android:src="@drawable/test" />

        <!-- 个人资料栏 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/im_list_name1"
                android:text="小baby" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_gender_age"
                    style="@style/dongtai_list_gender_girl"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:text="22" />

                <TextView
                    android:id="@+id/user_city"
                    style="@style/dongtai_list_time"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_my_position" />
            </LinearLayout>

        </LinearLayout>
        <!-- 个人资料栏结束 -->


        <LinearLayout
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCountTudi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2046"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/tudi"
                    android:textColor="#a6a6a6"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                style="@style/line_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#e3e3e3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvCountFans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2046"
                    android:textColor="#111111"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/fans"
                    android:textColor="#a6a6a6"
                    android:textSize="10sp" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <GridView
        android:id="@+id/gridPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="2dp"
        android:numColumns="5"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvPhotoTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="@string/Ta_has_not_upload_img"
        android:textColor="#a6a6a6"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSelect"
            style="@style/common_bnt_short_red"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/choose" />

    </LinearLayout>


</LinearLayout>