<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.stbl.stbl.widget.BannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="128dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_paihangbang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/icon_home_ranking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/weekly_rank"
                android:textColor="#69a6dd"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="@string/contest_with_others"
                android:textColor="@color/f_gray"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_integral"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/icon_home_exchange" />

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/exchange_mall"
                android:textColor="#8dc088"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="@string/goods_ready_for_you_to_exchange"
                android:textColor="@color/f_gray"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_mall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="11dp"
                android:src="@drawable/icon_home_mall" />

            <TextView
                android:id="@+id/tv_mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/st_mall"
                android:textColor="#f1817f"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:includeFontPadding="false"
                android:text="@string/there_is_always_got_one_for_you"
                android:textColor="@color/f_gray"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/Divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:drawableLeft="@drawable/topic_hot_icon"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="11dp"
        android:text="@string/me_hot_big_chief"
        android:textColor="@color/f_gray"
        android:textSize="13sp" />

    <View style="@style/Divider" />

    <com.stbl.stbl.widget.NestedGridView
        android:id="@+id/gv_big_chief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:cacheColorHint="@color/transparent"
        android:horizontalSpacing="18dp"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:verticalSpacing="8dp" />

    <View style="@style/Divider" />

    <TextView
        android:id="@+id/tv_change"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/me_change_a_change"
        android:textColor="@color/f_orange"
        android:textSize="14sp" />

    <View style="@style/Divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>