<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

	    <FrameLayout
	        android:id="@+id/fra_icon"
	        android:orientation="vertical"
	        android:layout_width="50dp"
	        android:layout_height="50dp" >
	
	        <com.stbl.stbl.widget.RoundImageView
	            android:id="@+id/iv_img"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/test" />
	
	        <ImageView
	            android:layout_gravity="bottom|center_horizontal"
	            android:id="@+id/user_identify"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/mine_identify_icon"
	            android:visibility="gone"
	             />
	    </FrameLayout>
	    
	    <!-- 内容 -->

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_toRightOf="@+id/fra_icon"
		    android:orientation="vertical" >

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >

		        <TextView
		            android:id="@+id/name"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
		            android:textColor="@color/black"
		            android:textSize="16sp"
		            android:text="小back" />
		        <TextView
		            android:id="@+id/what"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
		            android:textColor="@color/gray_text"
		            android:textSize="16sp"
		            android:layout_marginLeft="5dp"
		            android:text="购买了蓝色/S" />
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >
				<TextView
		            android:id="@+id/tv_time"
		            android:text="2015-11-11 17:00"
		            style="@style/seller_goods_attr"
		            android:textColor="@color/gray_text"
		            android:textSize="14sp" />
		    </LinearLayout>
		    
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="28dp"
		        android:gravity="top"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
				<TextView
		            android:id="@+id/tv_textview4"
					android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		            android:text="@string/mall_synthesize_remark"
		            android:textColor="@color/gray_text"
		            android:textSize="16sp" />

				<RatingBar
				    android:id="@+id/ratingBar1"
				    style="@style/mallRatingBar"
				    android:layout_marginLeft="10dp"
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:isIndicator="true"
				    android:clickable="false"
				    android:rating="4"
				    android:progressDrawable="@drawable/mall_starts" 
				    />
		    </LinearLayout>

		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:gravity="center_vertical"
		        android:orientation="horizontal" >

		        <TextView
		            android:id="@+id/tv_content"
					android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#555"
		            android:text="好好好，重要的事情说三遍。好好好，重要的事情说三遍。好好好，重要的事情说三遍。好好好，重要的事情说三遍。"
		            android:textSize="16sp" />
		    </LinearLayout>
		</LinearLayout>
    </RelativeLayout>
</LinearLayout>
