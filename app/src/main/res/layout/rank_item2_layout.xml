<!-- 动态 排行榜listview的item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_rank"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/gray_a4"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16" />

        <com.stbl.stbl.widget.RoundImageView
            android:id="@+id/iv_User"
            android:layout_width="@dimen/list_head_img_width_height"
            android:layout_height="@dimen/list_head_img_width_height"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_16"
            tools:src="@drawable/def_head" />

        <TextView
            android:id="@+id/tv_Name"
            style="@style/dongtai_list_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_User"
            android:includeFontPadding="false"
            tools:text="师徒部落" />


        <ImageView
            android:id="@+id/iv_Sex"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_Name"
            android:src="@drawable/sex_man" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_30">

            <TextView
                android:id="@+id/tv_Tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活跃指数"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray_a4" />

            <TextView
                android:id="@+id/tv_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Tip"
                android:layout_alignRight="@+id/tv_Tip"
                android:paddingRight="@dimen/dp_2"
                android:textColor="@color/theme_red"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold|italic"
                tools:text="234" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_100"
        android:background="@color/gray_line" />
</LinearLayout>