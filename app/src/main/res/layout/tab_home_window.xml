<!-- 只用作整个文件复制用 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_home_window_rootlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <com.stbl.stbl.widget.RealtimeBlurView
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="15dp"
        app:realtimeOverlayColor="#cfffffff" />

    <LinearLayout
        android:id="@+id/tabhome_layout_showmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@color/font_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_shitu_service"
                android:textColor="@color/font_black"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="80dp"
                android:layout_weight="1"
                android:background="@color/font_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabhome_showmenu_shoutu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/main_menu_shoutu"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/me_shoutu"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <View
                android:layout_width="45dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tabhome_showmenu_account_upgrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/main_menu_account_upgrade"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/me_account_upgrade"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <View
                android:layout_width="45dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tabhome_showmenu_brand_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/main_menu_brand_plus"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/me_brand_plus"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="@color/font_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/me_content_publish"
                android:textColor="@color/font_black"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="80dp"
                android:layout_weight="1"
                android:background="@color/font_gray" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabhome_showmenu_redpacket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/main_menu_redpacket"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/red_packet"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <View
                android:layout_width="45dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tabhome_showmenu_long_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/main_menu_long"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/long_statuses"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

            <View
                android:layout_width="45dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tabhome_showmenu_short_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="9dp"
                android:drawableTop="@drawable/main_menu_short_status"
                android:gravity="center_horizontal"
                android:onClick="onClick"
                android:text="@string/short_statuses"
                android:textColor="@color/font_black"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:onClick="onClick">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="22dp"
                android:src="@drawable/main_menu_close" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
