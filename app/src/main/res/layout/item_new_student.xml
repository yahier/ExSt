<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white2gray"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <com.stbl.stbl.widget.RoundImageView
        android:layout_marginTop="15dp"
        android:id="@+id/iv_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:scaleType="centerCrop"
        android:src="@drawable/def_head" />


    <LinearLayout
        android:layout_marginBottom="17dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/iv_head"
        android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="yaya"
            android:textColor="#000"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/layout_extra_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/iv_gender"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@drawable/icon_female" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="18岁"
                android:textColor="@color/gray_a5"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="广州"
                android:textColor="@color/gray_a5"
                android:textSize="11sp" />


        </LinearLayout>


        <TextView
            android:layout_weight="1"
            android:id="@+id/tvSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="All IS all right"
            android:textColor="@color/gray_a5"
            android:textSize="11sp" />

    </LinearLayout>


</RelativeLayout>

