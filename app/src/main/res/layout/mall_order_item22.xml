<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/mall_order_id"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView1"
            android:text="42149696885"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="交易成功"
            android:textColor="#f55" />
    </RelativeLayout>

    <View style="@style/line_horizontal" />

    <ListView
        style="@style/list"
        android:id="@+id/lv_goods"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:divider="@color/gray_line"
        android:dividerHeight="1px" />

    <View style="@style/line_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/moneyLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/mall_total"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView12"
                android:text="¥563.00"
                android:textColor="@color/mall_goods_price"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/btn_pingjia"
                style="@style/common_bnt_short_red"
                android:padding="8dp"
                android:text="@string/mall_remark_goods"
                />

            <Button
                android:id="@+id/btn_pay"
                style="@style/common_bnt_short_red"
                android:padding="8dp"
                android:text="@string/mall_payment"
                />

            <Button
                android:id="@+id/btn_remind_deliver"
                style="@style/common_bnt_short_red"
                android:padding="8dp"
                android:text="@string/mall_tip_deliver_goods"
                />

            <Button
                android:id="@+id/btn_get_goods"
                style="@style/common_bnt_short_red"
                android:padding="8dp"
                android:text="@string/mall_take_delivery_of_goods"
                />

            <Button
                android:id="@+id/btn_cancel_back"
                style="@style/common_bnt_short_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/mall_return_cancel"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/lin1" >

            <Button
                android:id="@+id/btn_tuihuo"
                style="@style/common_bnt_short_gray"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:text="@string/mall_return_apply"
                />

            <Button
                android:id="@+id/btn_cancel_order"
                style="@style/common_bnt_short_gray"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/btn_pingjia"
                android:padding="8dp"
                android:text="@string/mall_order_cancel"
                />

            <Button
                android:id="@+id/btn_query_deliver"
                style="@style/common_bnt_short_red"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/btn_pingjia"
                android:padding="8dp"
                android:text="@string/mall_check_logistics"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>