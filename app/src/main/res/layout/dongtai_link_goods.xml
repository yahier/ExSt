<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/statuses_link_lin"
    android:layout_margin="0dp">

    <ImageView
        android:id="@+id/link4imgLink"
        android:layout_width="@dimen/list_head_img_width_height"
        android:layout_height="@dimen/list_head_img_width_height"
        android:scaleType="centerCrop"
        tools:src="@drawable/test" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_head_img_width_height"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/link4tvGoodsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/link4tvGoodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_brown"
                android:textSize="12sp"
                tools:text="￥208" />

            <TextView
                android:id="@+id/link4tvGoodsSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/gray1"
                android:textSize="12sp"
                android:visibility="invisible"
                tools:text="销量:109" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>