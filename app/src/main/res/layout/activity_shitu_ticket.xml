<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_red_ff6">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/me_shitu_ticket"
            android:textColor="#fff"
            android:textSize="18sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/iv_back"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/f_white"
                android:textSize="45dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_amount"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_amount"
                android:text="@string/me_zhang"
                android:textColor="@color/f_white"
                android:textSize="13sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_recharge"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_earn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_list_white"
            android:gravity="center"
            android:text="@string/me_earn"
            android:textColor="@color/f_black"
            android:textSize="15sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:background="@color/divider"/>

        <TextView
            android:id="@+id/tv_consume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_list_white"
            android:gravity="center"
            android:text="@string/me_consume"
            android:textColor="@color/f_black"
            android:textSize="15sp"/>

    </LinearLayout>

    <View style="@style/Divider"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg"/>

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</LinearLayout>