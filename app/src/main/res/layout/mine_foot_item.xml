<!-- 我的足迹item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/edge_gap"
    android:paddingRight="@dimen/edge_gap"
    android:paddingTop="5dp"
    android:paddingBottom="5dp" >

    <com.stbl.stbl.widget.CircleImageView
        android:id="@+id/imgGoods"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/def_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="夏款亚麻8分男士裤 很好看哈"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_content" />

         <TextView
             android:id="@+id/item_price"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_centerVertical="true"
             android:text="12-26"
             android:textColor="@color/gray2"
             android:textSize="@dimen/font_size_content" />

    </LinearLayout>

</LinearLayout>