        <!--android:singleLine="true"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="13sp" />-->

    <!--<TextView-->
        <!--android:id="@+id/tv_location"-->
        <!--android:layout_width="wrap_content"-->
