<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="297dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="197dp">

        <ImageView
            android:id="@+id/iv_update_bg"
            android:layout_width="297dp"
            android:layout_height="197dp"
            android:src="@drawable/update_top_bg" />

        <ImageView
            android:id="@+id/iv_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/update_text_img" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_update_text"
            android:layout_marginLeft="-24dp"
            android:layout_marginTop="-12dp"
            android:layout_toRightOf="@id/iv_update_text"
            android:background="@drawable/update_version_bg"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/font_white"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_update_log_dialog"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="14dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="6dp"
            android:text=""
            android:textColor="#646464"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_update_cancel"
                android:text="下次再说"
                android:textColor="#646464"
                android:textSize="14sp" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_selector_update_confirm"
                android:text="立即更新"
                android:textColor="#fff"
                android:textSize="14sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </LinearLayout>


</LinearLayout>