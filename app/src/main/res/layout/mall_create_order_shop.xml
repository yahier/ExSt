<!-- 生成订单  android:layout_marginTop="15dp" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/theme_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/gray1"
                android:textSize="@dimen/sp_12" />

            <LinearLayout
                android:id="@+id/ll_shop_total"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mall_total"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/moneyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_red" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_horizontal"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:id="@+id/llPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            style="@style/line_horizontal"
            />

        <!--<FrameLayout
            android:id="@+id/linDiscountTicket"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textColor="@color/gray1" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="未使用"
                android:textColor="@color/theme_black_a" />
        </FrameLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/dp_10">

            <EditText
                android:id="@+id/et_give_seller_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start"
                android:hint="@string/give_seller_msg"
                android:lineSpacingExtra="3dp"
                android:maxLength="140"
                android:minLines="3"
                android:textColor="@color/gray1"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_textcount_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="0/140"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />
</LinearLayout>
