<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/bg_white"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left">

    <com.stbl.stbl.widget.RoundImageView
        android:id="@+id/iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/def_head" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_head"
        android:text="欣欣"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_L" />

    <View
        android:id="@+id/line_middle"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp" />

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/line_middle"
        android:scaleType="fitCenter"
        android:src="@drawable/dongtai_default" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="2016-04-12"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_M" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/line_middle"
        android:layout_below="@id/line_middle"
        android:visibility="gone"
        android:text="10金豆"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_M" />

</RelativeLayout>