<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@id/rc_img"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:scaleType="fitXY">

    <TextView
        style="@style/im_list_name1"
        android:padding="5dp"
        android:text="@string/business_card"/>

    <View style="@style/line_horizontal"/>

    <LinearLayout
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:scaleType="fitXY">

        <com.stbl.stbl.widget.RoundImageView
            android:id="@+id/user_img"
            style="@style/im_list_img"/>

        <!-- 个人资料栏 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                style="@style/im_list_name1"

                android:layout_weight="1"
                android:gravity="center_vertical"/>


            <LinearLayout
                android:id="@+id/linUserInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_gender"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_8"/>

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/gray_a5"
                    android:textSize="11sp"/>


                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_a5"
                    android:textSize="11sp"/>
                <!--android:drawableLeft="@drawable/icon_my_position"-->
            </LinearLayout>
            <!-- 签名 -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>