<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical">

    <View
        style="@style/divider_1px"
        android:layout_marginTop="@dimen/padding_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="当前绑定手机:"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />
    </LinearLayout>

    <View style="@style/divider_1px" />

    <Button
        android:id="@+id/common_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="@dimen/btn_margin_top"
        android:background="@drawable/btn_selector_red"
        android:text="更改绑定手机"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_L" />

</LinearLayout>