<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_96px"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left"
        android:text="@string/me_cancel"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_XL" />

    <TextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_96px"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left"
        android:text="@string/me_upload"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_XL" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_1px"
        android:layout_below="@id/tv_cancel" />

    <ImageView
        android:id="@+id/iv_start_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_top"
        android:src="@drawable/icon_voice_record" />

    <TextView
        android:id="@+id/tv_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_start_record"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_top"
        android:text="@string/me_click_start_record"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_L" />

    <TextView
        android:id="@+id/tv_tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tip1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_top"
        android:gravity="center_horizontal"
        android:text="@string/record_voice_tip"
        android:visibility="invisible"
        android:textColor="@color/font_gray_light"
        android:textSize="@dimen/font_M" />

    <TextView
        android:id="@+id/tv_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tip2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:text="@string/me_record_time_limit_2_60_s"
        android:textColor="@color/font_red"
        android:textSize="@dimen/font_M" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_top"
        android:layout_below="@id/tv_limit" />

</RelativeLayout>