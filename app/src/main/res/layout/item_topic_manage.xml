<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_white">

    <View
        style="@style/divider_1px"
        android:layout_alignParentTop="true" />

    <com.stbl.stbl.widget.RoundImageView
        android:id="@+id/iv_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/padding_top"
        android:src="@drawable/def_head" />

    <View
        android:id="@+id/line_middle"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_alignTop="@id/iv_head"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/iv_head" />

    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_time"
        android:layout_toRightOf="@id/iv_head"
        android:singleLine="true"
        android:text="哈哈哈哈哈"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_L" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_time"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_nick"
        android:text="回复了我"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_L" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_middle"
        android:layout_toRightOf="@id/iv_head"
        android:text="10分钟前"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/font_M" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:layout_marginTop="10dp"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈hhhhhhhhhhhhhhhhh吼吼吼吼吼吼吼吼吼吼吼吼吼吼吼吼吼吼哈哈哈哈哈哈哈"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_L" />

    <View
        android:id="@+id/v_divider"
        style="@style/divider_1px"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_left"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_96px"
        android:layout_below="@id/v_divider"
        android:layout_marginLeft="@dimen/padding_left"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text="#相亲"
        android:textColor="@color/font_orange"
        android:textSize="@dimen/font_L" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:layout_below="@id/v_divider"
        android:layout_marginRight="@dimen/padding_left"
        android:layout_toRightOf="@id/tv_topic_title"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_L" />

    <View
        style="@style/divider_1px"
        android:layout_below="@id/tv_topic_title" />

</RelativeLayout>