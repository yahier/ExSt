<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/im_list_item"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.stbl.stbl.widget.RoundImageView
        android:id="@+id/user_img"
        style="@style/im_list_img"
        android:src="@drawable/test" />

    <!-- 个人资料栏 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/im_list_name1" />

        <!--<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/user_gender_age"
                style="@style/dongtai_list_gender_girl"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:text="22" />

            <TextView
                android:id="@+id/user_city"
                style="@style/dongtai_list_time"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/icon_my_position" />
        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/linUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_8" />

            <TextView
                android:id="@+id/user_gender_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/gray_a5"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/user_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_a5"
                android:textSize="11sp" />
            <!--android:drawableLeft="@drawable/icon_my_position"-->
        </LinearLayout>
        <!-- 签名 -->

    </LinearLayout>
    <!-- 个人资料栏结束 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvShutUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_black_a"
            android:textSize="16sp" />
    </FrameLayout>

