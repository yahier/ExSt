<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <com.stbl.stbl.widget.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 隐藏栏 -->

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/theme_red_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="移除粉丝"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="6dp" >

            <com.stbl.stbl.widget.RoundImageView
                android:id="@+id/user_img"
                android:layout_width="@dimen/list_head_img_width_height"
                android:layout_height="@dimen/list_head_img_width_height"
                android:src="@drawable/test" />

            <!-- 个人资料栏 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/name"
                        style="@style/dongtai_list_name"
                        android:text="小baby"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_gender_age"
                        style="@style/dongtai_list_gender_girl"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:text="22" />

                    <TextView
                        android:id="@+id/user_city"
                        style="@style/dongtai_list_time"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
                <!-- 签名 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_signature"
                        style="@style/dongtai_list_time" />
                </LinearLayout>
            </LinearLayout>
            <!-- 个人资料栏结束 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_line_bg"
                    android:gravity="center"
                    android:text="加好友"
                    android:textColor="@color/theme_red_bg"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </com.stbl.stbl.widget.SwipeLayout>

</LinearLayout>