<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">


    <com.stbl.stbl.widget.EmptyView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:emptyImage="@drawable/icon_kong"
        app:emptyText="@string/me_qrcode_link_is_null" />


    <LinearLayout
        android:id="@+id/linBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/def_head" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_head"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/iv_head"
                android:includeFontPadding="false"
                android:textColor="#2d2d2d"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_invite_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nick"
                android:layout_toRightOf="@id/iv_head"
                android:includeFontPadding="false"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/me_invite_code_s"
                android:textColor="@color/f_gray"
                android:textSize="14sp"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgQRCode"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="我在师徒部落,一起来建立强人脉"
            android:textColor="#2d2d2d"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="扫一扫或者搜我昵称,加我为好友"
            android:textColor="#a19c98"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>
