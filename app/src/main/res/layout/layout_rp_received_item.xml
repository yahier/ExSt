<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/rp_money_white"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_9"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_money_to_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_avatar"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            />

        <ImageView
            android:id="@+id/iv_random_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@id/tv_money_to_user"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money_to_user"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@+id/iv_avatar"
            android:textColor="@color/gray_aaa"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/tv_item_money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_money_to_user"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:drawablePadding="4dp"
            android:id="@+id/tv_item_money_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_item_money_amount"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical"
            android:textColor="#ffb415"
            android:textSize="@dimen/sp_12"
            />
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/dp_13"/>
</LinearLayout>