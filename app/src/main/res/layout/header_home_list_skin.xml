<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.stbl.stbl.widget.BannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="128dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@drawable/bg_box"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_70"
        android:paddingRight="@dimen/dp_70"
        android:paddingTop="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/btn_paihangbang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="排行榜"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_integral"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_year" />

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/exchange_mall"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_mall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_nice" />

            <TextView
                android:id="@+id/tv_mall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/st_mall"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bighot"
        android:orientation="vertical">

        <com.stbl.stbl.widget.NestedGridView
            android:id="@+id/gv_big_chief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="45dp"
            android:cacheColorHint="@color/transparent"
            android:horizontalSpacing="18dp"
            android:listSelector="@color/transparent"
            android:numColumns="4"
            android:verticalSpacing="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_9"
            android:text="热门大酋长"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gv_big_chief"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_change"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/common_btn_red_line"
                android:enabled="false"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/me_change_a_change"
                android:textColor="@color/bg_red"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_change"
                android:layout_alignLeft="@+id/tv_change"
                android:layout_marginLeft="-20dp"
                android:src="@drawable/bg_cloud_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_change"
                android:layout_alignRight="@+id/tv_change"
                android:layout_marginRight="-20dp"
                android:src="@drawable/bg_cloud_right" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/Divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>