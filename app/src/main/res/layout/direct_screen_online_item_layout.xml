<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <com.stbl.stbl.widget.RoundImageView
        android:id="@+id/iv_user_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user_head_default"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="moy"
        android:includeFontPadding="false"
        android:layout_toRightOf="@id/iv_user_img"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/iv_user_img"/>

    <TextView
        android:id="@+id/tv_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="23"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_user_img"
        android:layout_marginLeft="10dp"
        style="@style/dongtai_list_gender_girl"
        android:paddingLeft="3dp"
        android:paddingRight="4dp"
        android:gravity="center"
        android:layout_below="@id/tv_username"/>

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:text="广州"
        android:layout_toRightOf="@id/tv_user_age"
        android:gravity="center"
        android:layout_alignTop="@id/tv_user_age"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/icon_my_position"
        android:drawablePadding="5dp"/>

    <TextView
        android:id="@+id/tv_user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房主"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>


</RelativeLayout>