<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left"
    android:paddingRight="@dimen/padding_left"
    android:paddingTop="@dimen/padding_top">

    <RelativeLayout
        android:id="@+id/layout_exchange_amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@drawable/selector_white2gray_stroke"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_bean"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_gold_bean" />

        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="个"
            android:textColor="#4c4c4c"
            android:textSize="@dimen/font_L" />

        <EditText
            android:id="@+id/et_exchange_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_yuan"
            android:layout_toRightOf="@id/iv_bean"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请填写转让数量"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#4c4c4c"
            android:textColorHint="#9c9c9c"
            android:textSize="@dimen/font_L" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_exchange_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:textColor="#9c9c9c"
        android:textSize="@dimen/font_M"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/layout_select_receive_bean_man"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_white2gray_stroke"
        android:paddingLeft="12dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_receive_bean_man" />

        <TextView
            android:id="@+id/tv_receive_bean_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_man"
            android:singleLine="true"
            android:text="选择收豆的人"
            android:textColor="#9c9c9c"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/test_right" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_80px"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="@dimen/margin_box_btn"
        android:background="@drawable/selector_red_btn"
        android:text="确定转让"
        android:textColor="#fff"
        android:textSize="@dimen/font_L" />


</LinearLayout>
