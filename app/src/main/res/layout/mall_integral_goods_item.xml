<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_line"
    android:padding="@dimen/px_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_goods_photo"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_85"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/dongtai_default" />

        <!--<TextView
            android:id="@+id/tv_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_goods_photo"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="inti"
            android:textColor="@color/gray_a6"
            android:textSize="@dimen/sp_12" />-->

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_goods_photo"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="1"
            android:text="商品名称商品名称商品名称商品名称商品名称商品名称"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/sp_14" />
        <!--本来不加这个父控，但价格和单位不居中-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="999.99"
                android:textColor="@color/theme_red"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_integral_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dp_3"
                android:text="@string/integral_unit"
                android:textColor="@color/gray_a5"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
