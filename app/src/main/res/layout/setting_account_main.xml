<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_light"
    android:orientation="vertical">

    <View
        style="@style/divider_1px"
        android:layout_marginTop="@dimen/padding_top" />

    <LinearLayout
        android:id="@+id/setting_item1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/me_phone_number"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />

    </LinearLayout>

    <View style="@style/divider_1px" />

    <LinearLayout
        android:id="@+id/setting_item2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@drawable/list_selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/me_weixin_bind"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_unbind"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/test_right" />

    </LinearLayout>

    <View style="@style/divider_1px" />

    <LinearLayout
        android:id="@+id/setting_item3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@drawable/list_selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/me_login_password"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_click_modify"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/test_right" />

    </LinearLayout>

    <View style="@style/divider_1px" />

    <LinearLayout
        android:id="@+id/setting_item4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_96px"
        android:background="@drawable/list_selector_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_left"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/me_pay_password"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_L" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_unset"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/font_L" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@drawable/test_right" />

    </LinearLayout>

    <View style="@style/divider_1px"
        android:visibility="gone"/>

</LinearLayout>