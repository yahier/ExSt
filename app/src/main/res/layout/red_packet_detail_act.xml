<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_loading_target"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


    <com.stbl.stbl.widget.XListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1px"
        android:divider="#f3f2ee"
        android:dividerHeight="1px">

    </com.stbl.stbl.widget.XListView>

    <TextView
        android:id="@+id/tvRecordsAlignBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="查看我的红包记录"
        android:textColor="#ffb415"
        android:textSize="13dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvSenderTipBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="未领取的红包,将于24小时后发起退款"
        android:textColor="#aaaaaa"
        android:textSize="14dp"
        android:visibility="gone" />

</RelativeLayout>