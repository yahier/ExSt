<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <View style="@style/Divider" />

        <RelativeLayout
            android:id="@+id/layout_head"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_head"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/def_head" />

            <!--<ImageView-->
                <!--android:id="@+id/iv_head_alert"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_toLeftOf="@id/iv_head"-->
                <!--android:src="@drawable/alert_red"-->
                <!--android:visibility="gone"/>-->

            <TextView
                android:id="@+id/tv_no_avator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_userinfo_tips"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/iv_head"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_20"
                android:text="请上传头像"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:visibility="gone"
                />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_nick"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_nick"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_industry"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_industry"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_no_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_userinfo_tips"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_industry"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_20"
                android:text="请设置行业"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:visibility="gone"
                />
        </RelativeLayout>

        <View style="@style/Divider" />

        <View
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="@color/bg" />

        <RelativeLayout
            android:id="@+id/layout_city"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_city"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_voice_intro"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/voice_record" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/iv_record"
                android:src="@drawable/voice_play" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <LinearLayout
            android:id="@+id/layout_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_list_white"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/me_signature"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="right"
                android:lineSpacingExtra="2dp"
                android:maxLines="2"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_gender"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_gender"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_age"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_age"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_invite_code"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_invite_code"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_invite_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_wealth_level"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tv_wealth_level_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_wealth_level"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_wealth_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

            <ProgressBar
                android:id="@+id/pb_wealth_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_wealth_level"
                android:layout_toRightOf="@id/tv_wealth_level_tip"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/layer_list_wealth_level_pb" />

        </RelativeLayout>

        <View
            style="@style/Divider"
            android:layout_marginLeft="12dp" />

        <RelativeLayout
            android:id="@+id/layout_connection_level"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/selector_list_white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tv_connection_level_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/me_connection_level"
                android:textColor="@color/f_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_connection_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:textColor="@color/f_gray"
                android:textSize="15sp" />

            <ProgressBar
                android:id="@+id/pb_connection_level"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_connection_level"
                android:layout_toRightOf="@id/tv_connection_level_tip"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/layer_list_connection_level_pb" />

        </RelativeLayout>

        <View style="@style/Divider" />

    </LinearLayout>

</ScrollView>