<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rp_money_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/rp_avatar" />

        <LinearLayout
            android:id="@+id/ll_year_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_avatar"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv_avatar"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_16"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016"
                android:textColor="@color/theme_yellow_dfb"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/icon_yellow_down" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="共发出"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_17" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="bottom|center_horizontal">

        <TextView
            android:id="@+id/tv_received_money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv_received_money_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:gravity="center"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_sended_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_bdb"
        android:textSize="@dimen/sp_17"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="center_horizontal"
        android:text="发出红包%s个"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/theme_bg" />

    <TextView
        android:id="@+id/tv_nodata_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="还没发过红包，快去商圈发红包吧~"
        android:layout_marginTop="@dimen/dp_50"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/gray_aaa"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_to_shoppingcircle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即去商圈"
        android:layout_marginTop="@dimen/dp_18"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/yellow_ffb"
        android:gravity="center"
        android:visibility="gone"/>
</LinearLayout>