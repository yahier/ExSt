<!-- 只用作整个文件复制用 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/im_list_item"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.stbl.stbl.widget.RoundImageView
        android:id="@+id/user_img"
        style="@style/im_list_img"
        android:src="@drawable/test" />

    <!-- 个人资料栏 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            style="@style/im_list_name1"
            android:layout_weight="1"
            android:text="小baby" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_8" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textColor="@color/gray_a5"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_a5"
                android:textSize="11sp" />
        </LinearLayout>
        <!-- 签名 -->

    </LinearLayout>
    <!-- 个人资料栏结束 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tvSent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发出请求"
            android:textColor="@color/theme_black_a"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvAdd"
            style="@style/common_red_line_bg"
            android:gravity="center"
            android:text="加好友" />

        <TextView
            android:id="@+id/tvSelect"
            style="@style/common_red_line_bg"
            android:gravity="center"
            android:text="选择"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>