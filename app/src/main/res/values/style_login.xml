<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="register_lin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">27dp</item>
    </style>

    <style name="register_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_1px</item>
        <item name="android:background">#e3e3e3</item>
    </style>


    <style name="register_input">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>

        <item name="android:textColor">@color/font_black1</item>
    </style>


    <style name="register_input_delete">
        <item name="android:src">@drawable/icon_register_delete</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="register_long_btn">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/register_btn_bg</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>